<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="http://gtri.gatech.edu"?>
<params>
  <library>Pure_Pursuit_plugin</library>
  <initial_speed>24.3</initial_speed>

    <max_speed>30</max_speed>
    <show_shapes>true</show_shapes>

    <view_length>200</view_length>
    <fov_el>360</fov_el>
    <fov_az>360</fov_az>

    <fov_width_angle>90</fov_width_angle>
    <fov_height_angle>90</fov_height_angle>

    <attack_view_length>30</attack_view_length>
    <attack_fov_width_angle>90</attack_fov_width_angle>
    <attack_fov_height_angle>90</attack_fov_height_angle>

  <goal_weight>1</goal_weight>
  <avoid_team_weight>0.5</avoid_team_weight>
  <avoid_nonteam_weight>0</avoid_nonteam_weight>
  <centroid_weight>0</centroid_weight>
  <align_weight>0</align_weight>

    <use_initial_heading>false</use_initial_heading>
    <goal>0 0 100</goal> <!-- if use_initial_heading is false -->

    <sphere_of_influence>100</sphere_of_influence>
    <minimum_team_range>4</minimum_team_range>
    <minimum_nonteam_range>20</minimum_nonteam_range>

</params>
